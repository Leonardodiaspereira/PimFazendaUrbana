## Comandos Para Criar as Tabelas do Banco de Dados DB_Fazenda:

CREATE TABLE CLIENTE
(
    ID_CLIENTE INT PRIMARY KEY IDENTITY NOT NULL,
    NOME VARCHAR (100)NOT NULL,
	CPF CHAR (11)UNIQUE NOT NULL,
	EMAIL VARCHAR(100)NOT NULL,
	TELEFONE_CELULAR VARCHAR(15)NOT NULL,
	TELEFONE_RESIDENCIAL VARCHAR(15),
	TELEFONE_COMERCIAL VARCHAR(15),
	ENDERECO VARCHAR(150)
);

CREATE TABLE PRODUTO(
    ID_PRODUTO INT PRIMARY KEY NOT NULL,
	NOME VARCHAR(50)NOT NULL,
	PREÇO DECIMAL(15,2) NOT NULL,
	ESTOQUE INT NOT NULL
);

CREATE TABLE PEDIDO(
    ID_PEDIDO INT PRIMARY KEY NOT NULL,
	ID_PRODUTO INT NOT NULL,
	ID_CLIENTE INT NOT NULL,
	QUANTIDADE INT NOT NULL,
);

-- CLIENTE X PEDIDO
ALTER TABLE PEDIDO 
    ADD CONSTRAINT fk_CLIENTEPEDIDO FOREIGN KEY (ID_CLIENTE) REFERENCES CLIENTE (ID_CLIENTE);

--PEDIDO X PRODUTO 
ALTER TABLE PEDIDO
    ADD CONSTRAINT fk_PEDPROD FOREIGN KEY (ID_PRODUTO) REFERENCES PRODUTO (ID_PRODUTO);

--PEDIDO X CLIENTE
ALTER TABLE PEDIDO
    ADD CONSTRAINT fk_PEDIDOCLIENTE FOREIGN KEY(ID_CLIENTE) REFERENCES CLIENTE (ID_CLIENTE);

